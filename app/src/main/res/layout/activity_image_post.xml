<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".image_post">
    <TextView
        android:id="@+id/new_Post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/home"
        android:text="New Post"
        android:textSize="28dp"
        android:textStyle="bold" />
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/backbtn"
        android:src="@drawable/back"
        android:background="#001C1616"
        android:layout_below="@+id/new_Post_title"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_check_circle_24"
        android:background="#00FFFFFF"
        android:id="@+id/tick"
        android:visibility="visible"
        android:layout_marginTop="65dp"
        android:layout_marginRight="45dp"
        android:layout_alignParentRight="true"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tick"
        android:layout_marginTop="35dp"
        >
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_centerVertical="true"
        android:id="@+id/card_post"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/white"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/img_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image"

                        />
                    <ImageButton
                        android:id="@+id/newPost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="150dp"
                        android:clickable="true"
                        android:background="#00000000"
                        android:src="@drawable/new_post_circle"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    android:textSize="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="35dp"
                    android:id="@+id/change"
                    android:layout_below="@+id/img_post"
                    />
                <EditText
                    android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Captions"
                    android:layout_below="@+id/change"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/newcourse"
                    android:padding="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/General_post"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/edit"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#DBE2EF"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/relative"
                        >
                        <EditText
                            android:id="@+id/edit_tag"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:hint="Tags"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"
                            android:padding="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/newcourse"
                            />
                        <TextView
                            android:id="@+id/modes_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Modes"
                            android:layout_marginLeft="10dp"
                            android:layout_below="@+id/edit_tag"
                            android:layout_marginTop="20dp"
                            android:textColor="#877A7A"
                            android:textSize="20dp" />
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="only for private members"
                            android:layout_below="@+id/modes_text"
                            android:id="@+id/radio1"
                            android:textSize="18dp"
                            android:layout_marginLeft="80dp"
                            android:padding="5dp"
                            android:layout_marginBottom="150dp"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>