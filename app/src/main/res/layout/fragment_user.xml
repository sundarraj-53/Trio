<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    tools:context=".UserFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/User_profile_title"
            android:text="User Profile"
            android:fontFamily="@font/home"
            android:textSize="28dp"
            android:layout_margin="15dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/User_profile_title"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="13dp"
            android:drawablePadding="5dp"
            android:text="Sign Out"
            android:textColor="#7C7979"
            android:textColorLink="#00B0F8"
            android:textSize="20dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile"
            android:layout_width="match_parent"
            android:layout_below="@+id/User_profile_title"
            android:layout_height="250dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/baseline_account_circle_24" />

        <androidx.cardview.widget.CardView
            android:id="@+id/filterView"
            android:layout_below="@+id/user_profile"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:text="Name"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="#0074FF"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textSize="18sp"
                    android:text="name"
                    android:id="@+id/profileName"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:layout_below="@+id/name"
                    android:text="Email"
                    android:layout_weight="1"
                    android:layout_marginTop="25dp"
                    android:textStyle="bold"
                    android:textColor="#0074FF"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email"
                    android:layout_below="@+id/profileName"
                    android:layout_marginTop="25dp"
                    android:layout_alignParentEnd="true"
                    android:textSize="18sp"
                    android:id="@+id/profileEmail"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/department"
                    android:layout_below="@+id/email"
                    android:text="Department"
                    android:layout_weight="1"
                    android:layout_marginTop="25dp"
                    android:textStyle="bold"
                    android:textColor="#0074FF"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="department"
                    android:layout_below="@+id/profileEmail"
                    android:layout_marginTop="25dp"
                    android:layout_alignParentEnd="true"
                    android:textSize="18sp"
                    android:id="@+id/profiledepartment"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/phoneno"
                    android:layout_below="@+id/department"
                    android:text="Phone No"
                    android:layout_weight="1"
                    android:layout_marginTop="25dp"
                    android:textStyle="bold"
                    android:textColor="#0074FF"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="phoneno"
                    android:layout_below="@+id/profiledepartment"
                    android:layout_marginTop="25dp"
                    android:layout_alignParentEnd="true"
                    android:textSize="18sp"
                    android:id="@+id/profilephone"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/club_register"
            android:layout_below="@+id/filterView"
            android:text="Club Registeration"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:textSize="18dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register"
            android:layout_below="@+id/filterView"
            android:text="@string/register"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:textSize="18dp"
            android:textColorLink="#3F72AF"
            android:layout_marginRight="25dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:id="@+id/edit_text"
            android:layout_below="@+id/register"
            android:layout_marginTop="45dp"
            android:layout_centerHorizontal="true"
            />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>