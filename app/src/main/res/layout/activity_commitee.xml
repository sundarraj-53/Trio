<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".commitee_activity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commitee Selection"
        android:id="@+id/title_login"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:fontFamily="@font/title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/email_commitee"
        android:textSize="24dp"
        android:layout_below="@+id/title_login"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:inputType="text"
        android:id="@+id/email_et"
        android:layout_marginTop="90dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/custom"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/title_login"
        />
    <Spinner
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/custom"
        android:layout_below="@+id/email_et"
        android:layout_marginTop="50dp"
        android:id="@+id/spinner_adt"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Club"
        android:id="@+id/club_commitee"
        android:textSize="24dp"
        android:layout_below="@+id/email_commitee"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:text="Submit"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/spinner_adt"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>