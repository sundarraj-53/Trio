<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/baseline_account_circle_24" />

            <TextView
                android:id="@+id/donor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="67dp"
                android:layout_marginTop="37dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/home"
                android:text="Sundarraj M"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/blood_gr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/donor_name"
                android:layout_marginLeft="130dp"
                android:text="Blood Group:"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/blood_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/donor_name"
                android:layout_marginLeft="240dp"
                android:text="Blood value"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/department_gr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blood_gr"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="5dp"
                android:text="Department:"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/department_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blood_value"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="5dp"
                android:text="Department Value"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/phoneno_gr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/department_gr"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="5dp"
                android:text="Phone No:"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/phoneno_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/department_value"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="phoneNo Value"
                android:textSize="18dp" />
        </RelativeLayout>
</androidx.cardview.widget.CardView>
