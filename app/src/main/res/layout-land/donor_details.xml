<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Group:"
            android:textSize="20dp"
            android:id="@+id/blood_gr"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood value"
                android:textSize="20dp"
                android:id="@+id/blood_value"
                android:layout_marginLeft="130dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department:"
                android:textSize="20dp"
                android:id="@+id/department_gr"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/blood_gr"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department Value"
                android:textSize="20dp"
                android:layout_below="@+id/blood_value"
                android:id="@+id/department_value"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="130dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone No:"
                android:textSize="20dp"
                android:id="@+id/phoneno_gr"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/department_gr"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department Value"
                android:textSize="20dp"
                android:layout_below="@+id/department_value"
                android:id="@+id/phoneno_value"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="130dp"
                />
        </RelativeLayout>
</androidx.cardview.widget.CardView>
